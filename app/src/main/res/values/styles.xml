<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoldTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="RoundedSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/rounded_searchview_background</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/button_fav_unactivated</item>
        <item name="colorControlActivated">@color/button_fav_activated</item>
    </style>

    <style name="EmailProfileText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/no_accent_elements</item>
    </style>

    <style name="NameProfileText">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
    </style>

    <style name="FavoriteTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_dialog_button</item>
    </style>

</resources>