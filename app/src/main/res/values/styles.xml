<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoldTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bright_purple_detail_screen</item>
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="RoundedSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/rounded_searchview_background</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/button_fav_unactivated</item>
        <item name="colorControlActivated">@color/button_fav_activated</item>
    </style>

    <style name="EmailProfileText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/no_accent_elements</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="NameProfileText">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="FavoriteTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
        <item name="android:gravity">left</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="SearchScreenTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="AppCustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_dialog_button</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="android:textColorHint">@color/no_accent_elements</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ThemeOverlay.MyApp" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorPrimary">@color/bright_purple_detail_screen</item>
        <item name="colorControlNormal">@color/bright_purple_detail_screen</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PlaceTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
    </style>

    <style name="PlacePrice">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
    </style>

    <style name="AccentInfo">
        <item name="fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textColor">@color/bright_purple_detail_screen</item>
    </style>

    <style name="MainButtonTextStyle">
        <item name="fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_rounded_dialog</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="colorControlActivated">@color/button_fav_unactivated</item>
        <item name="colorControlNormal">@color/button_fav_activated</item>
        <item name="android:textColor">@color/icons_and_common_text</item>
        <item name="android:textColorAlertDialogListItem">@color/main_button_text</item>
        <item name="android:fontFamily">@font/font_montserrat_regular</item>

    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/bright_purple_detail_screen</item>
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
    </style>

</resources>